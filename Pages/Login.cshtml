@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

@{ var formInputAttributes = new { htmlAttributes = new { @class = "form-control" } }; }
@{ var formErrorAttributes = new { @class = "text-danger" }; }

<div class="container" style="background-color: white;">
    <br />
    <h1 class="display-4">@ViewData["Title"]</h1>
    <form method="POST">
        <div class="form-group">
            @(Html.LabelFor(model => model.Username))
            @(Html.EditorFor(model => model.Username, formInputAttributes))
            @(Html.ValidationMessageFor(model => model.Username, null, formErrorAttributes))
        </div>
        <div class="form-group">
            @(Html.LabelFor(model => model.Password))
            @(Html.EditorFor(model => model.Password, formInputAttributes))
            @(Html.ValidationMessageFor(model => model.Password, null, formErrorAttributes))
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
    <br />
</div>