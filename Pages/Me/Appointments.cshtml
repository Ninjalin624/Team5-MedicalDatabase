@page
@model AppointmentsModel
@{
    ViewData["Title"] = "Appointment History";
}

@using ClinicWeb.Model

<div class="card">
    <div class="card-body">
        <h3 class="card-title">@(ViewData["Title"])</h3>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Office</th>
                    <th scope="col">Start Time</th>
                    <th scope="col">End Time</th>
                    <th scope="col">Doctor</th>
                    <th scope="col">Approved</th>
                    <th scope="col">Canceled</th>
                </tr>
            </thead>
            <tbody>
            @foreach (Appointment appointment in Model.Appointments)
            {
                <tr>
                    <td>@(appointment.Date)</td>
                    <td>@(appointment.OfficeId)</td>
                    <td>@(appointment.StartTime)</td>
                    <td>@(appointment.EndTime ?? new TimeSpan())</td>
                    <td>@(appointment.DoctorId)</td>
                    <td>@((appointment.Approved ?? false) ? "Yes" : "No")</td>
                    <td>@((appointment.Canceled ?? false) ? "Yes" : "No")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
