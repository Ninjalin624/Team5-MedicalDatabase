@page
@model UpcomingModel
@{
    ViewData["Title"] = "Upcoming Appointments";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title">@(ViewData["Title"])</h3>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model.Appointments)
                {
                    <tr>
                        @(appointment.ToString())
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
